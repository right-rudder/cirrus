const { pathname, navBarBG = false } = Astro.props;
---

<nav id="navbar" class={`navbar w-full flex justify-center transition-all duration-500 ease-in-out py-4 px-1 ${navBarBG ? "force-navbar-bg" : ""}`}>
  <div class="container px-4 flex items-center justify-between gap-3 md:px-0">
    <!-- Logo -->
    <a href="/" class="object-contain h-auto">
      <ImageComp
        class="logo-white w-64 md:w-72"
        src="/src/assets/cirrus-anniversary-logo-white.webp"
        alt={`${COMPANY_NAME} Logo`}
      />
    </a>

    <!-- Desktop Menu -->
    <ul class="nav flex gap-2 list-none">
      {
        menu.map((item, index) => (
          <li class={`menu-item group relative transition-colors duration-300 ease-in-out ${item.children ? "has-children" : ""}`} data-index={index}>
            <a href={item.url}>{item.label}</a>
            {item.children && (
              <ul class="sub-menu absolute top-full left-0 z-40 min-w-56 bg-accent-800 border border-accent-800 list-none py-2 rounded-sm invisible opacity-0 translate-y-1.5 pointer-events-none transition-all duration-300 ease-in-out group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 group-hover:pointer-events-auto">
                {item.children.map((child) => (
                  <li>
                    <a
                      href={child.url}
                      class={
                        (child.url === pathname || child.url + "/" === pathname) && child.url !== "/"
                          ? "menu-link-hover"
                          : ""
                      }
                    >
                      {child.label}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>

    <!-- Buttons -->
    <div class="buttons">
      <a href="/contact" class="btn-primary text-lg!">
        <IoIosAirplane className="size-6" />
        Contact Us
      </a>
    </div>

    <!-- Mobile Hamburger -->
    <button id="mobile-toggle" class="hamburger" aria-label="Toggle menu">
      <svg
        class="hamburger-menu-bars"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" x2="21" y1="6" y2="6"></line>
        <line x1="3" x2="21" y1="12" y2="12"></line>
        <line x1="3" x2="21" y1="18" y2="18"></line>
      </svg>
      <svg
        class="hamburger-menu-x"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 6 6 18"></path>
        <path d="m6 6 12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu">
    <ul>
      {
        menu.map((item, index) => (
          <li class="mobile-item" data-index={index}>
            <a href={item.url}>{item.label}</a>
            {item.children && (
              <ul class="mobile-submenu">
                {item.children.map((child) => (
                  <li>
                    <a
                      href={child.url}
                      class={
                        (child.url === pathname || child.url + "/" === pathname) && child.url !== "/"
                          ? "menu-link-hover"
                          : ""
                      }
                    >
