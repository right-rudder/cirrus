---
import ImageComp from "../ImageComp.astro";

const { data } = Astro.props;
---

<section class="relative py-24 px-4 overflow-hidden text-white">
  <div class="absolute inset-0 z-0">
    <ImageComp src={data.image.src} alt={data.image.alt} class={`w-full h-full object-cover`} />

    <div class="absolute inset-0 bg-linear-to-r from-slate-900 to-slate-900/70"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center flex flex-col items-center">
    <h2 data-aos="fade-down" class={`text-center font-bold mb-2 text-5xl lg:text-7xl ${data.subTitle ? "mb-2" : "mb-4"}`}>{data.title}</h2>

    {
      data.subTitle && (
        <p data-aos="fade-down" data-aos-delay="100" class="text-center mb-4 text-3xl">
          {data.subTitle}
        </p>
      )
    }

    <div data-aos="fade-down" data-aos-delay="200">
      {
        data.descriptionParagraphs?.map((paragraph: string) => (
          <p class="sans max-w-xl text-lg md:text-xl opacity-90" set:html={paragraph} />
        ))
      }
    </div>

    <div data-aos="fade-down" data-aos-delay="300" class="flex flex-col sm:flex-row justify-center gap-4 mt-10">
      {
        data.ctas.map((cta: any, index: number) => (
          <a href={cta.url} class={`${index > 0 ? "btn-rose-outline" : "btn-rose"}`}>
            {cta.text}
          </a>
        ))
      }
    </div>
  </div>
</section>
