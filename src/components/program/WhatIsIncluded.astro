---
import { FaCircleCheck } from "react-icons/fa6";
import SimpleSection from "../sections/SimpleSection.astro";

const { data } = Astro.props;
---

<SimpleSection title={data.title} subTitle={data.subTitle} size="large">
  <div class="text-slate-600">
    {
      data.descriptionParagraphs.map((paragraph: string) => (
        <p class="max-w-2xl mx-auto text-center mb-8">{paragraph}</p>
      ))
    }

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      {
        data.bulletPointLists.map((list: any) => (
          <div class="group p-8 rounded-sm border-2 border-slate-200 transition-all duration-300 ease-in-out hover:scale-105 hover:shadow-lg">
            <h3 class="text-2xl font-bold text-slate-900 mb-8 flex items-center gap-4 transition-colors duration-300 ease-in-out group-hover:text-rose-600">
              {list.icon && (
                <div class="p-2 rounded-sm bg-slate-900 flex items-center justify-center transition-colors duration-300 ease-in-out group-hover:bg-rose-600">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    class="shrink-0 text-white size-6"
                  >
                    <path d={list.icon} fill="currentColor" />
                  </svg>
                </div>
              )}
              {list.title}
            </h3>

            <ul class="list-disc list-inside space-y-2">
              {list.items.map((item: string) => (
                <li class="flex items-center gap-4">
                  <FaCircleCheck className="text-rose-600 shrink-0 size-6" />
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</SimpleSection>
