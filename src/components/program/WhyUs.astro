---
import ImageComp from "../ImageComp.astro";
import SimpleSection from "../sections/SimpleSection.astro";
import { FaCheckCircle } from "react-icons/fa";

const { data } = Astro.props;
---

<SimpleSection>
  <div id="why-us" class="relative flex flex-col gap-6 lg:flex-row">
    <div class="text-slate-600 lg:px-12 lg:text-right">
      <h2 class="text-slate-900 font-bold text-5xl mb-4">{data.title}</h2>

      <p class="mb-12 text-2xl">{data.subTitle}</p>

      <p class="my-6 text-2xl font-bold text-slate-900">{data.topic.title}</p>

      {data.topic.descriptionParagraphs.map((paragraph: string) => <p>{paragraph}</p>)}

      <p class="my-6 text-2xl font-bold text-slate-900">{data.bulletList.title}</p>

      {data.bulletList.descriptionParagraphs.map((paragraph: string) => <p>{paragraph}</p>)}

      <ul class="my-8">
        {
          data.bulletList.bulletPoints.map((item: string, index: number) => (
            <li
              data-aos="fade-down"
              data-aos-delay={index * 50}
              data-aos-anchor="why-us"
              class="flex items-center leading-8 gap-4 my-6 bg-slate-100 border border-slate-200 rounded-sm py-4 px-8 transition! duration-500 ease-in-out shadow-md lg:flex-row-reverse hover:scale-105 hover:shadow-xl"
            >
              <FaCheckCircle className="size-6 shrink-0 text-rose-600" />
              {item}
            </li>
          ))
        }
      </ul>
    </div>

    <div class="w-full relative lg:1/3 lg:top-28 lg:self-start lg:sticky">
      <ImageComp
        src={data.img.src}
        alt={data.img.alt}
        class="rounded-sm object-cover object-[70%_50%] max-h-screen"
      />

      <div class="absolute top-4 right-4 bg-rose-800 py-4 px-8 rounded-sm shadow-xl max-w-xs">
        <p class="text-lg text-white flex flex-col items-center gap-0.5">
          <span class="text-5xl font-bold">30+</span>
          Years of Excellence
        </p>
      </div>
    </div>
  </div>
</SimpleSection>
