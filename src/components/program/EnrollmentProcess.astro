---
import SimpleSection from "../sections/SimpleSection.astro";

const { data } = Astro.props;
---

<section class="py-24 px-6 bg-slate-900 text-white">
  <div class="max-w-7xl mx-auto">
    <h2 data-aos="fade-down" class="text-center font-bold mb-12 text-5xl md:text-6xl">
		{data.title}
	</h2>
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
      {
        data.steps.map((step: any, index: number) => (
          <div data-aos="fade-down" data-aos-delay={(index * 100) + 100} class="p-6 rounded-sm bg-slate-950 text-white border-l-4 border-l-rose-600">
            <h3 class="text-2xl font-semibold mb-4">{`${index + 1}. ${step.title}`}</h3>
            <p>{step.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
