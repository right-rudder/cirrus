---
import ImageComp from "../ImageComp.astro";

const { data } = Astro.props;
---

<section class="bg-white">
  <div class="flex flex-col lg:flex-row">
    <div
      class="max-w-3xl p-12 flex flex-col justify-center gap-4 lg:py-24 lg:ml-auto lg:text-right lg:items-end"
    >
      <h2 class="text-slate-900 text-5xl font-bold">{data.title}</h2>
      <p class="text-slate-700 text-xl whitespace-pre-line">
        {data.description}
      </p>
      <a class="btn-secondary w-fit" href={data.cta.url}>{data.cta.text}</a>
    </div>
    <ImageComp
      src={data.img.src}
      alt={data.img.alt}
      class={`object-cover max-h-128 lg:max-h-160 lg:w-1/2 ${data.img.objectPosition ? data.img.objectPosition : "object-center"}`}
      quality={data.img.quality ? data.img.quality : 70}
    />
  </div>
</section>
