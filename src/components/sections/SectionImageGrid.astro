---
import ImageComp from "../ImageComp.astro";

const { data } = Astro.props;
---

<div class="py-24">
  <div class="relative mx-auto max-w-7xl">
    <div class="sm:max-w-lg px-6 lg:pl-6">
      <h2 class="text-slate-900 font-bold text-5xl mb-4">{data.title}</h2>

      <p class="text-slate-700 mb-12 text-2xl">
        {data.subTitle}
      </p>

      <p class="text-slate-700 whitespace-pre-line mb-4 text-xl">
        {data.description.trim()}
      </p>

      {
        data.cta && (
          <a href={data.cta.url} class="btn-rose w-fit">
            {data.cta.text}
          </a>
        )
      }
    </div>

    <!-- Decorative image grid -->
    <div aria-hidden="true" class="pointer-events-none lg:absolute lg:inset-y-0 lg:mx-auto lg:w-full lg:max-w-7xl">
      <div
        class="transform sm:absolute sm:top-0 sm:left-1/2 sm:opacity-20 lg:top-1/2 lg:left-1/2 lg:translate-x-8 lg:-translate-y-1/2 lg:opacity-100"
      >
        <div class="flex items-center justify-center space-x-6 overflow-hidden sm:justify-normal lg:space-x-8">
          <div class="grid shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[0].src} alt={data.imgs[0].alt} class="size-full object-cover" />
            </div>
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[1].src} alt={data.imgs[1].alt} class="size-full object-cover" />
            </div>
          </div>
          <div class="grid shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[2].src} alt={data.imgs[2].alt} class="size-full object-cover" />
            </div>
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[3].src} alt={data.imgs[3].alt} class="size-full object-cover" />
            </div>
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[4].src} alt={data.imgs[4].alt} class="size-full object-cover" />
            </div>
          </div>
          <div class="grid shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[5].src} alt={data.imgs[5].alt} class="size-full object-cover" />
            </div>
            <div class="h-64 w-44 overflow-hidden rounded-lg">
              <ImageComp src={data.imgs[6].src} alt={data.imgs[6].alt} class="size-full object-cover" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
