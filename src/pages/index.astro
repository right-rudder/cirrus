---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import CardList from "../components/cards/CardList.astro";
import VideoSection from "../components/sections/VideoSection.astro";
import ElfsightGoogleReviews from "../components/widgets/ElfsightGoogleReviews.astro";
import CTA from "../components/sections/CTA.astro";
import { data } from "../data/index";
---

<BaseLayout>
  <Header data={data.header} />

  <section class="py-24 px-4 bg-white">
    <CardList data={data.cards} />
  </section>

  <!-- TODO : Add airline marquee -->

  <!-- TODO : Improve program list -->

  <section class="py-24 px-4 bg-slate-100">
    <h2 class="text-slate-900 text-5xl text-center mb-4 font-bold">
      {data.path.title}
    </h2>
    <p class="text-slate-600 text-2xl text-center mb-12">
      {data.path.subTitle}
    </p>
    <CardList data={data.path.cards} />
  </section>

  <ElfsightGoogleReviews />

  <VideoSection data={data.aboutUs} />

  <section class="py-24 px-4 bg-slate-100">
    <h2 class="text-slate-900 text-5xl text-center mb-4 font-bold">
      {data.explore.title}
    </h2>
    <p class="text-slate-600 text-2xl text-center mb-12">
      {data.explore.subTitle}
    </p>
    <CardList data={data.explore.cards} />
  </section>

  <!-- TODO : Add FAQ -->

  <CTA data={data.cta} />

  <!-- TODO : Add blog feed -->

  <!-- TODO : Add newsletter -->
</BaseLayout>
