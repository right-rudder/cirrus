---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import CardList from "../components/cards/CardList.astro";
import VideoSection from "../components/sections/VideoSection.astro";
import ElfsightGoogleReviews from "../components/widgets/ElfsightGoogleReviews.astro";
import CTA from "../components/sections/CTA.astro";
import { data } from "../data/index";
import FAQsSection from "../components/sections/FAQsSection.astro";
import BlogFeed from "../components/BlogFeed.astro";
import SimpleSection from "../components/sections/SimpleSection.astro";
---

<BaseLayout>
  <Header data={data.header} />

  <SimpleSection>
    <CardList data={data.cards} />
  </SimpleSection>

  <!-- TODO : Add airline marquee -->

  <!-- TODO : Improve program list -->

  <SimpleSection title={data.path.title} subTitle={data.path.subTitle} bg="bg-slate-100">
    <CardList data={data.path.cards} />
  </SimpleSection>

  <ElfsightGoogleReviews />

  <VideoSection data={data.aboutUs} />

  <SimpleSection title={data.explore.title} subTitle={data.explore.subTitle} bg="bg-slate-100">
    <CardList data={data.explore.cards} />
  </SimpleSection>

  <FAQsSection />

  <BlogFeed />
  
  <CTA data={data.cta} />

  <!-- TODO : Add newsletter -->
</BaseLayout>
